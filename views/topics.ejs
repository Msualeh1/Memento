<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Memento</title>
  <link rel="stylesheet" href="/topics.css">
</head>
<%- include ('navbar') %>

  <body>
    <div class="topic_body">

      <br><br><br>
      <div class="row hero">
        <h2 style="margin-top:4rem;color:white;" class="text-center">Quick Search Topic of Interest</h2>
        <div class="container searchbar">
            <form class="d-flex flex-wrap justify-content-center" role="search" action="/search" method="GET">
                <div class="form-group mx-sm-3 mb-2">
                    <input class="form-control hero" type="search" name="key" placeholder="Search" aria-label="Search">
                </div>
                <button class="btn btn-outline-success herobtn mb-2" type="submit">Search <i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </div>
    </div>
    
      <div class="topics">

        <% subTopics.forEach(topic=> { %>
          <a href="/subjects/topics/<%= topic._id %>" style="text-decoration: none;color: black;">
            <h4 class="headings">
              <%= topic.topic %>
            </h4>
          </a>
          <% }); %>

      </div>
    </div>
  </body>

</html>